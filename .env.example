# Podcast Directory Manager - Environment Configuration
# Copy this file to .env and update with your production values

# Application Settings
APP_NAME="Podcast Directory Manager"
APP_VERSION="1.0.0"
APP_URL="https://yourdomain.com"
ENVIRONMENT="production"

# Security
# Generate a secure random string for session security
SESSION_SECRET="your-random-secret-key-here"

# File Upload Settings
MAX_FILE_SIZE=2097152
MIN_IMAGE_WIDTH=1400
MIN_IMAGE_HEIGHT=1400
MAX_IMAGE_WIDTH=2400
MAX_IMAGE_HEIGHT=2400

# Timezone
TIMEZONE="UTC"

# Admin Credentials (for future authentication)
# Use strong passwords in production!
ADMIN_USERNAME="admin"
ADMIN_PASSWORD_HASH=""  # Generate with: php -r "echo password_hash('your-password', PASSWORD_DEFAULT);"

# Error Reporting (set to 0 in production)
ERROR_REPORTING=0
DISPLAY_ERRORS=0

# Backup Settings
MAX_BACKUPS=10
BACKUP_RETENTION_DAYS=30
